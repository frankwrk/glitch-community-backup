defaultUserBackground = "https://cdn.gomix.com/01a72eba-647e-4abf-abe6-89b02e388a7f%2Fdefault-user-background.svg"
anonAvatar = "https://cdn.gomix.com/01a72eba-647e-4abf-abe6-89b02e388a7f%2Fanon-avatar.svg"

.profile
  padding-bottom: 1rem

  // a.category-name
  //   color: primary
  //   display: inline-block

  .recent-projects
    background-image: url(defaultUserBackground)
    background-size: cover
    border-radius: 5px
    padding: 16px
    background-position: center
    overflow: auto
  
  .profile-info
    width: 22%
    float: left
    margin-top: 0
    margin-right: 3%
    @media (max-width: 800px)
      width: 32%
      float: none


  .user-avatar-container
    width: 80%

  .user-avatar
    width: 100%
    height: 0
    padding-bottom: 100%
    margin-bottom: .5em
    border-radius: 5px
    
  .anon-user-avatar
    background-image: url(anonAvatar)
    background-position: center
    background-repeat: no-repeat
    background-size: 65%
    background-color: cyan // overriden from ls

  .projects
    display: inline
    padding: 0
    
  .project:after
    border-bottom-color: section-line