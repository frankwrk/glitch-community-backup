pie-duration = 10s
pie-size = 20px
count = infinite

.loader-pie
  position: relative
  width: pie-size
  height: pie-size
  border-radius: 100%
  overflow: hidden
  background-color: secondary-background
  display: inline-block
  vertical-align: top
  transform: rotate(180deg)

  .slice,
  .left-side,
  .right-side
    overflow: hidden
    position: absolute
    width: 50%
    height:100%

  .slice
    background-color: line-on-secondary-background
    position: absolute
    left:100%
    top:0
    width:100%
    height:100%
    border-radius: 100%

  .left-side
    left: 0
    .slice
      border-top-left-radius: 0
      border-bottom-left-radius: 0
      transform-origin: 0 50% 0
      &.animated
        animation: pie-left pie-duration infinite linear

  .right-side
    left: 50%
    .slice
      left:-100%;
      border-bottom-right-radius: 0
      border-top-right-radius: 0	
      transform-origin: 100% 50% 0
      &.animated
        animation: pie-right pie-duration infinite linear

@keyframes pie-left
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(180deg)
  100%
    transform:rotate(180deg)

@keyframes pie-right
  0%
    transform:rotate(0deg)
  50%
    transform:rotate(0deg)
  100%
    transform:rotate(180deg)

